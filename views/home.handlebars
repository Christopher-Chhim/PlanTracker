{{#extend 'main'}}
  {{#content 'body'}}
    <h2>Welcome, {{user.username}}</h2>
    <p>Here's your daily routine:</p>
    <div>
        <h3>Tasks</h3>
        <ul>
            {{#each tasks}}
                <li>
                    <strong>{{this.name}}</strong> - {{this.description}}
                    <a href="/tasks/edit/{{this.id}}">Edit</a>
                    <form action="/tasks/delete/{{this.id}}" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h3>Add New Task</h3>
        <form action="/tasks" method="POST">
            <div>
                <label for="name">Task Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div>
                <label for="description">Description:</label>
                <input type="text" id="description" name="description">
            </div>
            <div>
                <label for="reminder">Reminder Date:</label>
                <input type="date" id="reminder" name="reminder">
            </div>
            <button type="submit">Add Task</button>
        </form>
    </div>
    <div>
        <h3>Random Quote</h3>
        <p id="quote">{{quote}}</p>
    </div>
    <div>
        <h3>Current Weather</h3>
        <p id="weather">{{weather}}</p>
    </div>
  {{/content}}
{{/extend}}
