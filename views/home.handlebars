  <main>
    <section class="welcome">
      <h1>Welcome to the Career Portal</h1>
      <p>Explore various career opportunities and manage your career profile.</p>
    </section>

    {{#if careers.length}}
      <section class="careers">
        <h2>Your Careers</h2>
        <ul>
          {{#each careers}}
            <li>{{this.title}} - {{this.description}}</li>
          {{/each}}
        </ul>
      </section>
    {{else}}
      <section class="no-careers">
        <h2>No careers found</h2>
        <p>You have not added any careers yet. Start by creating a new career entry!</p>
      </section>
    {{/if}}

          <h1>Welcome to the Career Portal</h1>
