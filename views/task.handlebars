{{#extend 'main'}}
  {{#content 'body'}}
    <h2>Task Details</h2>
    <form action="/tasks/update" method="POST">
        <input type="hidden" name="id" value="{{task.id}}">
        <div>
            <label for="name">Task Name:</label>
            <input type="text" id="name" name="name" value="{{task.name}}" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" value="{{task.description}}">
        </div>
        <div>
            <label for="reminder">Reminder Date:</label>
            <input type="date" id="reminder" name="reminder" value="{{task.reminder}}">
        </div>
        <button type="submit">Update Task</button>
    </form>
  {{/content}}
{{/extend}}
